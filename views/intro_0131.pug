doctype html
html(lang='ko')
  head
    title project_anmg
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      #brand{      
      padding:4px;
      height:100%;
      color:#4040be;
      font-size:3rem;
      }
      
  body
    .container(style='margin-top:15px;')
      #brand
        img(src='https://s3.ap-northeast-2.amazonaws.com/projectanmg/images/project_anmg_main_2.png', alt='project_anmg_main_2' width='100%')        
      form(action='/return', method='post')
        fieldset.form-group
        legend
        
        h4 국가를 선택하세요
        .form-group
          select#temporary_address_div.form-control(name='temporary_address_div' required)
            option(value='국내코스') 국내 코스
            option(value='해외코스') 해외 코스            
        legend 
                
        h4 도시를 선택하세요
        .form-group
          label(for='province_code')
          select#province_code.form-control(name='province_code' required)
            option(value='1') 서울특별시
            option(value='2') 부산광역시
            option(value='3') 대구광역시
            option(value='4') 인천광역시
            option(value='5') 광주광역시
            option(value='6') 대전광역시
            option(value='7') 울산광역시
            option(value='8') 세종특별자치시
            option(value='9') 경기도
            option(value='10') 강원도
            option(value='11') 충청북도
            option(value='12') 충청남도
            option(value='13') 전라북도
            option(value='14') 전라남도
            option(value='15') 경상북도
            option(value='16') 경상남도
            option(value='17') 제주특별자치도
        legend
                
        h4 환경을 선택하세요
        .form-group
          label(for='course_type')
          select#course_type.form-control(name='course_type' required)
            option(value='1') 자연속 코스
            option(value='2') 도심속 코스           
        legend 
        
        h4 기간을 선택하세요
        .form-group
          label(for='duration_rate')
          select#duration_rate.form-control(name='duration_rate' required)
            option(value='4') 선택 없음
            option(value='0') 산책 코스
            option(value='1') 당일 코스
            option(value='2') 1박 2일 코스
            option(value='3') 2박 3일 코스
            option(value='4') 3박 이상 코스
        legend 
        
        h4 난이도를 선택하세요
        .form-group
          label(for='difficulty_index')
          select#difficulty_index.form-control(name='difficulty_index' required)
            option(value='4') 선택 없음
            option(value='1') 정말 쉬워요
            option(value='2') 별로 힘들지 않아요
            option(value='3') 조금 힘들어요
            option(value='4') 많이 힘들어요   
        legend 
       
        h4 예산을 선택하세요
        .form-group
          label(for='budget')
          select#budget.form-control(name='budget' required)
            option(value='999999999') 선택 없음
            option(value='10000') 1만원 이하
            option(value='20000') 2만원 이하
            option(value='50000') 5만원 이하
            option(value='100000') 10만원 이하
            option(value='200000') 20만원 이하
            option(value='999999999') 나는야 금수저일세..
        legend 
        button.btn.btn-default.btn-block(type='submit') 검색
      br